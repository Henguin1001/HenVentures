		  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		  ga('create', 'UA-37298098-1', 'henrytroutman.com');
		  ga('send', 'pageview');
	</script>

</head>
<body>
	
	{{ block('navbar') }}
	{% if block('content') %}
		<div class="container" style="margin-bottom:40px;">
			{{ block('content') }}
		</div>
	{% endif %}
	{% if footer %}
		<footer class="footer">
			<div class="container">
				<div class="col-md-3 col-md-offset-4">
					<p class="text-primary">Contact</p>
					<p class="text-info">henguin1001@gmail.com</p>
				</div>
