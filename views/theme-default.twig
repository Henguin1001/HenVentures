<!DOCTYPE html>

{# the objects to be used #}
{% include 'objects/navbar.twig' %}
{% include 'objects/imports.twig' %}

{# init object to handle importation #}
{% set imports = imports() %}
<html>
<head>
	<title>{{ title }}</title>
	<link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
	<meta name="description" content="You should like my fanpage.">
	<meta http-equiv="content-type" content="text/html;charset=UTF-8">
	
	{# importing the css #}
	{{ imports.bootstrap_css() }}

	{# importing the javascript #}
	{{ imports.jQuery() }}
	{{ imports.bootstrap_js() }}


	{{ block('setup') }}
	<style type="text/css">
		.footer {
		  position: relative;
		  margin-top: 150px; /* negative value of footer height */
		  height: 150px;
		  clear:both;
		  padding-top:20px;
		  border-top: 1px solid #E7E7E7;
		  background-color: #FAFAFA;
		}
	</style>
	<script>
